<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.minangadventure.dedie.minangadventure.MenuUtama">

    <ImageView
        android:id="@+id/gbrHeader"
        android:layout_width="368dp"
        android:layout_height="200dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <ImageView
        android:id="@+id/gbrAdventure"
        android:src="@drawable/logo_adventure"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_kiri_adventur"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/gbrHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/btnAdventure"
        android:text="Adventure"
        android:gravity="center"
        android:onClick="adventure"
        android:background="@drawable/rectangle_kanan_adventur"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="80dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/gbrHeader"
        android:layout_toRightOf="@+id/gbrAdventure"
        android:layout_toEndOf="@+id/gbrAdventure"
        />
    <ImageView
        android:id="@+id/gbrAbout"
        android:src="@drawable/logo_about"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_kiri_about"
        tools:layout_editor_absoluteY="188dp"
        tools:layout_editor_absoluteX="74dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/gbrAdventure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/btnAbout"
        android:text="About"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_kanan_about"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="80dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/btnAdventure"
        android:layout_toRightOf="@+id/gbrAbout"
        android:layout_toEndOf="@+id/gbrAbout"
        />
    <ImageView
        android:id="@+id/gbrExit"
        android:src="@drawable/logo_exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_kiri_exit"
        tools:layout_editor_absoluteY="188dp"
        tools:layout_editor_absoluteX="74dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/gbrAbout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/btnExit"
        android:text="Exit"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_kanan_exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="80dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/btnAbout"
        android:layout_toRightOf="@+id/gbrExit"
        android:layout_toEndOf="@+id/gbrExit"
        />


</RelativeLayout>
